<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #0c0c0d;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: #38383d; -fx-background-radius: 10;">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" style="-fx-background-color: #38383daa; -fx-text-fill: white; -fx-padding: 10;" text="Quinzical" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="80.0" />
                     </font>
                  </Label>
                  <Label fx:id="currentScoreLabel" text="You currently have $???" textFill="#e3b50e" VBox.vgrow="NEVER">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="15.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox maxHeight="400.0" prefHeight="200.0" prefWidth="600.0" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="playButton" mnemonicParsing="false" onAction="#playPressed" style="-fx-background-color: none; -fx-text-fill: white;" text="Play">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="practiceButton" mnemonicParsing="false" onAction="#practicePressed" style="-fx-background-color: none; -fx-text-fill: white;" text="Practice">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetPressed" style="-fx-background-color: none; -fx-text-fill: white;" text="Reset">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#settingsPressed" style="-fx-background-color: none; -fx-text-fill: white;" text="Settings">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </VBox>
         </children>
         <StackPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </StackPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
